@{
	TekDostPatileriDbContext db = new TekDostPatileriDbContext();
	var logovarmı = db.logos.FirstOrDefault();
	var iletişimiçerik = db.iletişims.FirstOrDefault();
	var ödemeiçerik = db.ödemes.FirstOrDefault();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	@if (logovarmı != null)
	{
		<link rel="shortcut icon" href="~/icon/@logovarmı.LogoUrl" type="image/vnd.microsoft.icon" />
	}
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
	<title>@RenderSection("başlık")</title>
</head>
<body>
	@if (TempData["h1"] != null)
	{
		<div class="h1" role="alert">
			@TempData["h1"]
		</div>
	}
	@if (TempData["h2"] != null)
	{
		<div class="h2" role="alert">
			@TempData["h2"]
		</div>
	}
	<input type="hidden" id="google_translate_element">
	<header class="header section-q">
		<div class="container">
			<div class="row align-center justify-between mobile-none">
				<div class="column mobile-none">
					<div class="row align-center">
						<div class="column" style="margin:-15px;">
							<a href="/Home/Index" class="logo" aria-label="logo" title="logo">
								@await Component.InvokeAsync("logo")
							</a>
						</div>
						<div class="column">
							@await Component.InvokeAsync("nav")
						</div>
					</div>
				</div>
				<div class="column mobile-none">
					<ul class="button-list">
						<li class="button-item">
							<button class="button-link" onclick="changeLanguage('tr')">
								Tr
							</button>
						</li>
						<li class="button-item">
							<button class="button-link" onclick="changeLanguage('en')">
								En
							</button>
						</li>
						<li class="button-item">
							<button class="button-link" onclick="changeLanguage('de')">
								De
							</button>
						</li>
					</ul>
				</div>
			</div>		
		</div>
		<!-- Simulate a smartphone / tablet -->
		<div class="mobile-container mobile-nav">
				<!-- Top Navigation Menu -->
				<div class="topnav">
					<a href="/Home/Index" class="active" aria-label="logo" title="logo">
						  @await Component.InvokeAsync("logo")
					</a>
					<div id="myLinks">
						<ul class="navigation-list-d">
							<li class="navigation-item-d">
								<a href="/Home/Index" class="navigation-link-d">
									Anasayfa
								</a>
							</li>
							<li class="navigation-item-d">
								<a href="/Home/hakkında" class="navigation-link-d">
									Hakkımızda
								</a>
							</li>
							<li class="navigation-item-d">
								<a href="/Home/hizmetler" class="navigation-link-d">
									Hizmetlerimiz
								</a>
							</li>
							<li class="navigation-item-d">
								<a href="/Home/yuvamız" class="navigation-link-d">
									Yuvamız
								</a>
							</li>
							<li class="navigation-item-d">
								<a href="/Home/galeri" class="navigation-link-d">
									Galeri
								</a>
							</li>
							<li class="navigation-item-d">
								<a href="/Home/iletişim" class="navigation-link-d">
									İletişim
								</a>
							</li>
						</ul>
						<div class="navbar-language">
							<ul class="button-list">
							<li class="button-item">
								<button class="button-link" onclick="changeLanguage('tr')">
									Tr
								</button>
							</li>
							<li class="button-item">
								<button class="button-link" onclick="changeLanguage('en')">
									En
								</button>
							</li>
							<li class="button-item">
								<button class="button-link" onclick="changeLanguage('de')">
									De
								</button>
							</li>
							</ul>
						</div>
					</div>
					<a href="javascript:void(0);" class="icon" onclick="myFunction()">
						<i class="fa fa-bars"></i>
					</a>
				</div>
			</div>
		</div>
	</header>
	<section class="l1">
		@RenderBody()
	</section>
	 @if (iletişimiçerik != null)
	{
		<section class="social-section section-q">
			<div class="container soc text-center">
				<h3 class="social-title"><b>Takip Edin</b></h3>
				<table class="social-icon mx-auto">
					<tbody>
						<tr>
							<td><div class="social-item"><a href="@iletişimiçerik.Facebook"><i class="fa fa-facebook-f fa-2x"></i></a></div></td>
							<td><div class="social-item"><a href="@iletişimiçerik.Tweater"><i class="fa fa-twitter fa-2x"></i></a></div></td>
							<td><div class="social-item"><a href="@iletişimiçerik.İnstagram"><i class="fa fa-instagram fa-2x"></i></a></div></td>
							<td><div class="social-item"><a href="@iletişimiçerik.Youtube"><i class="fa fa-youtube fa-2x"></i></a></div></td>
						</tr>
					</tbody>
				</table>
			</div>
		</section>
	}
	 @if (ödemeiçerik != null)
	{
		<section class="Money-section section-q">
			<div class="container money text-center">
				<div class="row m"><div class="column c mobile-center"><h2>Tek Dost Patileri</h2></div></div><br>
				<div class="row m"><div class="column c mobile-center"><h2><b>Destek Alanı</b></h2></div></div><br>
				<div class="m text-center mobile-flex-wrap">
					<div class="column c text-center mobile-center mobile-font-size-11">
						<p class="p7"><a href="/Home/bağış" class="bağış1">Bağış Yapmak İster Misiniz</a></p>
					</div>
				</div>
			</div>
		</section>
	}
	<footer class="footer mobile-p">
		<div class="container">
			<div class="row m text-left">
				<div class="column c f">
					<ul class="nav-f float-left">
						<li class="nav-item-f">
							<a class="nav-link-f text-light py-0" href="/Home/Index">Anasayfa<i class="border-right"></i></a>
						</li>
						<li class="nav-item-f">
							<a class="nav-link-f text-light py-0" href="/Home/iletişim">İletişim <i class="border-right"></i></a>
						</li>
						<li class="nav-item-f">
							<a class="nav-link-f text-light py-0" href="/Home/siteharitası">Site Haritası</a>
						</li>
					</ul>
				</div>
				<div class="column c f">
					<ul class="nav-f float-right">
						<li class="nav-item-f">
							<a class="nav-link-f text-light py-0" href="/Home/yuvamız">Bize Destek Olur musunuz?<i class="border-right"></i></a>
						</li>
						<li class="nav-item-f">
							<a class="nav-link-f text-light py-0" href="/Home/galeri">Galeri</a>
						</li>
					</ul>
				</div>
			</div>
			<br>
			<br>
			<div class="row">
				<div class="column c ">
					<p1 class="text-left">
						<p class="pull-right">
							<a href="/Home/yapımcı" target="_blank">
								<img src="~/img/OMM YAPIM.gif" class="img-responsive pull-right" style="width:70px; height:70px; background-repeat:repeat; border-radius: 40px;">
							</a>
						</p>
						2023 © Tüm Hakları Saklıdır. Tek Dost Patileri.<br/>
						Site yararına çalışan dernek statüsündedir.
					</p1>
				</div>
			</div>
		</div>
	</footer>
	<script type="text/javascript" src="~/js/translate.js"></script>
	<script type="text/javascript" src="~/js/script.js"></script>
	<script type="text/javascript" src="~/js/navbar.js"></script>
	<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
</html>