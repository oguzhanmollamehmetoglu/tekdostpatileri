@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	TekDostPatileriDbContext db = new TekDostPatileriDbContext();
	var hizmetler = db.hizmetlers.FirstOrDefault();
}
@section başlık{
      TekDostPatileri | Hizmetler
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="https://unpkg.com/swiper/swiper-bundle.min.css"/>
</head>
<body>
	<section class="there-section">
		<div class="picture">
			<img src="~/img/r2.png">
		</div>
	</section>
	 @if (hizmetler != null)
    {
	<section class="detailinfo-section section-q">
		<div class="container">
			<div class="row">
				<div class="column detailinfo bg-white px-0">
					<div class="detailinfo-two px-3">
						<h2 class="detailinfo-title text-white"><b>HİZMETLERİMİZ</b></h2>
					</div>
					<div class="nav-h flex-column">
						<ul class="nav-ul">
							<li class="nav-link active"><a href="#h-pills-1">İhbarlar</a></li>
							<li class="nav-link"><a href="#h-pills-2">Sağlık ve Tedavi</a></li>
							<li class="nav-link"><a href="#h-pills-3">Kısırlaştırma</a></li>
							<li class="nav-link"><a href="#h-pills-4">Hayvanlarımıza Karşı Şiddet</a></li>
							<li class="nav-link"><a href="#h-pills-5">Eğitim ve Bilinçlendirme</a></li>
							<li class="nav-link"><a href="#h-pills-6">Donör Ve Sponsorlarımız</a></li>
						</ul>
					</div>
				</div>
				<div class="col-md-6 c bg-white detailinfo-data">
					<div class="tab-content">
						<div class="tab-pane active" id="h-pills-1">
							<h3 class="mt-3 text-danger"><b>İhbarlar</b></h3><hr>
							<div id="the-red-one" class="text-left">
								<p>@Html.Raw(hizmetler.ihbarp1)</p>
								<p>@Html.Raw(hizmetler.ihbarp2)</p>
								<p>&nbsp;</p>
							</div>
						</div>
						<div class="tab-pane" id="h-pills-2">
							<h3 class="mt-3 text-danger"><b>Sağlık ve Tedavi</b></h3><hr>
								<div id="the-red-one" class="text-left">
								<p><img class="ig2" src="~/img/@hizmetler.sağlıkimg1"></p>
								<p>@Html.Raw(hizmetler.sağlıkp1)</p>
								<p>@Html.Raw(hizmetler.sağlıkp2)</p>
								<p><img class="ig3" src="~/img/@hizmetler.sağlıkimg2">
									@Html.Raw(hizmetler.sağlıkp3)
								</p>
								<p>&nbsp;</p>
							</div>
						</div>
						<div class="tab-pane " id="h-pills-3">
							<h3 class="mt-3 text-danger"><b>Kısırlaştırma</b></h3><hr>
							<div id="the-red-one" class="text-left">
								<p><img class="ig2" src="~/img/@hizmetler.kısırlaştırmaimg1"></p>
								<p>@Html.Raw(hizmetler.kısırlaştırmap1)</p>
								<p>@Html.Raw(hizmetler.kısırlaştırmap2)</p>
								<p>@Html.Raw(hizmetler.kısırlaştırmap3)</p>
								<p><img alt="" class="ig3" src="~/img/@hizmetler.kısırlaştırmaimg2">
									@Html.Raw(hizmetler.kısırlaştırmap4)
								</p>
								<p>@Html.Raw(hizmetler.kısırlaştırmap5)</p>
								<p>@Html.Raw(hizmetler.kısırlaştırmap6)</p>
								<p>@Html.Raw(hizmetler.kısırlaştırmap7)</p>
								<p>&nbsp;</p>
							</div>
						</div>
						<div class="tab-pane " id="h-pills-4">
							<h3 class="mt-3 text-danger"><b>Hayvanlarımıza Karşı Şiddet</b></h3><hr>
							<div id="the-red-one" class="text-left">
								<p>@Html.Raw(hizmetler.şiddetp1)</p>
								<p>@Html.Raw(hizmetler.şiddetp2)</p>
								<p>@Html.Raw(hizmetler.şiddetp3)</p>
								<p>@Html.Raw(hizmetler.şiddetp4)</p>
								<p>&nbsp;</p>
							</div>
						</div>
						<div class="tab-pane " id="h-pills-5">
							<h3 class="mt-3 text-danger"><b>Eğitim ve Bilinçlendirme</b></h3><hr>
							<div id="the-red-one" class="text-left">
								<p>@Html.Raw(hizmetler.eğitimp1)</p>
								<p>&nbsp;</p>
							</div>
						</div>
						<div class="tab-pane " id="h-pills-6">
							<h3 class="mt-3 text-danger"><b>Donör Ve Sponsorlarımız</b></h3><hr>
							<div id="the-red-one" class="text-left">
								<p><img class="ig1" src="~/img/@hizmetler.donörimg1" style="text-align:center; margin-left:10px; margin-right:10px; width:100%; height:50%; "></p>
								<p>@Html.Raw(hizmetler.donörp1)</p>
								<p><img class="ig1" src="~/img/@hizmetler.sponsorimg1" style="text-align:center; margin-left:10px; margin-right:10px; width:100%; height:50%;"></p>
								<p>@Html.Raw(hizmetler.sponsorp1)</p>
								<p>&nbsp;</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	}
	<script type="text/javascript" src="~/js/script.js"></script>
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
	<script type="text/javascript" src="~/js/navbar.js"></script>
</body>
</html>