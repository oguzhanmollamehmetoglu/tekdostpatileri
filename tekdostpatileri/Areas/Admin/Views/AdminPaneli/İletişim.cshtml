@using Microsoft.AspNetCore.Http
@using tekdostpatileri.Models;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section başlık{
      TekDostPatileri | İletişim
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/css/adminpanel.css" type="text/css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well" id="content">
            @if (TempData["Hataİ"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Hataİ"]
                </div>
            }
            <form method="post" asp-controller="AdminPaneli" asp-action="İletişim">
                <div class="form-group">
                    <label for="exampleInputEmail1">Adres:</label>
                    <textarea style="min-height:100px; width:100%; resize:none;" type="text" name="Adres" id="Adres" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email:</label>
                    <textarea type="email" name="Email" id="Email" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Facebook:</label>
                    <input type="url" name="Facebook" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">İnstagram:</label>
                    <input type="url" name="İnstagram" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Twitter:</label>
                    <input type="url" name="Tweater" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Youtube:</label>
                    <input type="url" name="Youtube" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Ekle</button>
            </form>
        </div>
    </div>
</div>

<script src="~/js/adminpaneli.js"></script>
<script src="~/ckeditor5-build-classic-40.0.0/ckeditor5-build-classic/ckeditor.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/44.0.0/classic/ckeditor.js"></script>
<script src="~/js/CKedit.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>