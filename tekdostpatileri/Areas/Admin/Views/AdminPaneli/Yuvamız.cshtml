@using Microsoft.AspNetCore.Http
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model tekdostpatileri.Models.Yuvamız
@section başlık{
      TekDostPatileri
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/css/adminpanel.css" type="text/css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well" id="content">
            @if (TempData["HataY"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["HataY"]
                </div>
            }
            <form method="post" enctype="multipart/form-data" asp-controller="AdminPaneli" asp-action="Yuvamız">
                <div class="form-group">
                    <label for="exampleInputPassword1">YuvaResim:</label>
                    <input type="file" class="form-control" item="YuvaResim" name="YuvaResim" id="YuvaResim">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Yuvaİsim:</label>
                    <input type="text" class="form-control" item="Yuvaİsim" name="Yuvaİsim" id="Yuvaİsim">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">YuvaCinsi:</label>
                    <input type="text" class="form-control" item="YuvaCinsi" name="YuvaCinsi" id="YuvaCinsi">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">YuavYaşı:</label>
                    <input type="text" class="form-control" item="YuavYaşı" name="YuvaYaşı" id="YuvaYaşı">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">YuvaCinsiyeti:</label>
                    <input type="text" class="form-control" item="YuvaCinsiyeti" name="YuvaCinsiyeti" id="YuvaCinsiyeti">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">YuvaRengi:</label>
                    <input type="text" class="form-control" item="YuvaRengi" name="YuvaRengi" id="YuvaRengi">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">YuvaHikaye:</label>
                    <textarea style="min-height:200px; max-width:1000px; resize:none;" type="text" class="form-control" id="YuvaHikaye" name="YuvaHikaye" aria-describedby="emailHelp"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Ekle</button>
            </form>
        </div>
    </div>
</div>

<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/js/adminpaneli.js"></script>
<script src="~/ckeditor5-build-classic-40.0.0/ckeditor5-build-classic/ckeditor.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/44.0.0/classic/ckeditor.js"></script>
<script src="~/js/CKedit.js"></script>
